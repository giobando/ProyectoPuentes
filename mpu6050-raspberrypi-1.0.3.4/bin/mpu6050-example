from mpu6050 import mpu6050
from time import sleep
import time

sensor = mpu6050(0x68)

contador = 0
print "Time Inicial: %s" % time.ctime()#, ", num: %d" % contador

while True:
    accel_data = sensor.get_accel_data()
##    gyro_data = sensor.get_gyro_data()
##    temp = sensor.get_temp()

##    print("prueba #: " + str(contador))
    print("#"+str(contador)+": x "+str(accel_data['x']) + ", y: "+str(accel_data['y'])+  ", z: "+str(accel_data['z']))
##    print("Accelerometer data")
##    print("x: " + str(accel_data['x']))
##    print("y: " + str(accel_data['y']))
##    print("z: " + str(accel_data['z']))
##
##    print("Gyroscope data")
##    print("#"+str(contador)+": x "+str(gyro_data['x']) + ", y: "+str(gyro_data['y'])+  ", z: "+str(gyro_data['z']))
##    print("x: " + str(gyro_data['x']))
##    print("y: " + str(gyro_data['y']))
##    print("z: " + str(gyro_data['z']))

##    print("Temp: " + str(temp) + " C")

    if contador == 22:
      break
    else:
      contador+=1
    sleep(1/22)
print "Time final: %s" % time.ctime()    
##    sleep(0.5)


